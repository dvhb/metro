    "typescript": "^4.0.2"
  },
  "engines": {
    "npm": ">=5.0.0",
    "node": ">=8.0.0"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --hoist --no-ci",
    "doc": "node ./node_modules/documentation/bin/documentation.js build packages/imask/src/imask.js -f html -o docs/api",
    "lerna": "lerna",
    "flow": "lerna run flow -- check",
    "clean": "lerna clean",
    "build": "npm run build:core && npm run build:plugins",
    "build:core": "lerna run build --scope=metro",
    "dev:core": "lerna run dev --scope=metro",
    "build:plugins": "lerna run build --ignore=metro",
    "test": "lerna run test --parallel",
    "make": "npm run test && npm run build",
    "release": "npm run doc && npm run make && lerna publish",
    "coverage": "lerna run coveralls --scope metro"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
